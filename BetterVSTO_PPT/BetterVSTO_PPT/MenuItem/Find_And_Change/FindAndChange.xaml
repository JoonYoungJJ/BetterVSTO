            <RowDefinition x:Name="TextRow" Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!--  기능  -->
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition x:Name="ReplaceRow" Height="*" />
            </Grid.RowDefinitions>
            <Label
                Grid.Column="0"
                Margin="15,0,0,0"
                VerticalAlignment="Center"
                Background="Transparent"
                Content="Search Word"
                Cursor="Arrow"
                Focusable="false"
                TextBlock.FontWeight="Bold" />
            <TextBox
                x:Name="Target_String"
                Grid.Column="1"
                Margin="15,5,15,5"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0,0,0,1.2"
                FontFamily="맑은 고딕"
                Text="{Binding TargetString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                ToolTip="찾을 텍스트를 입력하세요" />
            <Dok:ImageButton
                x:Name="b_FindText"
                Grid.Column="2"
                Width="20"
                Height="20"
                Click="b_FindText_Click"
                Pad="2"
                ToolTip="Start Searching" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="15,0,0,0"
                VerticalAlignment="Center"
                Background="Transparent"
                Content="Replace Word"
                Cursor="Arrow"
                Focusable="false"
                TextBlock.FontWeight="Bold" />
            <TextBox
                x:Name="Replace_String"
                Grid.Row="1"
                Grid.Column="1"
                Margin="15,5,15,5"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0,0,0,1.2"
                FontFamily="맑은 고딕"
                Text="{Binding ReplaceString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                ToolTip="바꿀 텍스트를 입력하세요." />
        </Grid>


