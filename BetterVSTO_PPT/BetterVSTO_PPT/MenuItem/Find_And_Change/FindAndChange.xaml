                </Grid.ColumnDefinitions>
                <!--  배경색  -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="7" />
                    </Grid.RowDefinitions>
                    <Dok:RoundToggleButton
                        Grid.Row="0"
                        Margin="5,0,5,0"
                        IsEnabled="{Binding Format_Font_Background_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Dok:ImageButton
                        x:Name="b_Format_Font_Background"
                        Grid.Row="1"
                        Click="Select_Color"
                        IsEnabled="{Binding Format_Font_Background_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Pad="5 0 5 0" />
                    <Rectangle
                        Grid.Row="2"
                        Margin="5,0,5,0"
                        Fill="{Binding Format_Font_Background, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <!--  글씨색  -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="7" />
                    </Grid.RowDefinitions>
                    <Dok:RoundToggleButton
                        Grid.Row="0"
                        Margin="5,0,5,0"
                        IsEnabled="{Binding Format_Font_Foreground_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Dok:ImageButton
                        x:Name="b_Format_Font_Foreground"
                        Grid.Row="1"
                        Click="Select_Color"
                        IsEnabled="{Binding Format_Font_Foreground_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Pad="5 0 5 0" />
                    <Rectangle
                        Grid.Row="2"
                        Margin="5,0,5,0"
                        Fill="{Binding Format_Font_Foreground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <!--  글씨크기  -->
                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Dok:RoundToggleButton
                        Grid.Row="0"
                        Margin="5,0,5,0"
                        IsEnabled="{Binding Format_Font_Size_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Dok:ImageButton
                        Grid.Row="1"
                        IsEnabled="{Binding Format_Font_Size_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Pad="5 0 5 0" />
                    <TextBox
                        x:Name="FontSizeTextBox"
                        Grid.Row="1"
                        Margin="5,5,5,1"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        BorderBrush="DimGray"
                        FontSize="10"
                        IsEnabled="{Binding Format_Font_Size_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Text="{Binding Bind_AS_Font_Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <!--  글씨굵게  -->
                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Dok:RoundToggleButton
                        Grid.Row="0"
                        Margin="5,0,5,0"
                        IsEnabled="{Binding Format_Font_Size_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Dok:ImageButton
                        Grid.Row="1"
                        IsEnabled="{Binding Format_Font_Size_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Pad="5 0 5 0" />
                </Grid>
                <!--  기울임  -->
                <Grid Grid.Column="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Dok:RoundToggleButton
                        Grid.Row="0"
                        Margin="5,0,5,0"
                        IsEnabled="{Binding Format_Font_Size_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Dok:ImageButton
                        Grid.Row="1"
                        IsEnabled="{Binding Format_Font_Size_En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Pad="5 0 5 0" />
                </Grid>
                <!--  글씨밑줄  -->
                <Grid Grid.Column="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Dok:RoundToggleButton
                        Grid.Row="0"
                        Margin="5,0,5,0"
