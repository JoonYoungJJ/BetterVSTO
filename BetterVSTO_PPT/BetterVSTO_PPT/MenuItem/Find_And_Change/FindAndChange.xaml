    Height="600"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DokleysControls;component/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
